{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
        "tests/*"
      ]
    },
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
